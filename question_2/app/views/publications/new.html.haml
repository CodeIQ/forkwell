= form_for @publication do |f|
  - if @publication.errors.any?
    #error_explanation
      %h2= "#{pluralize(@publication.errors.count, "error")} prohibited this skilltag from being saved:"
      %ul
        - @publication.errors.full_messages.each do |msg|
          %li= msg
  %dl
    %dt= f.label :title
    %dd= f.text_field :title

  %dl
    %dt= f.label :url
    %dd= f.text_field :url

  = f.submit 'Save'
